{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { 
      "src": "/api/(.*)", 
      "dest": "/api/$1" 
    },
    { 
      "src": "/stats/(.*)", 
      "dest": "https://api.weknowbetter.app/stats/$1"
    },
    { 
      "src": "/(.*)", 
      "dest": "/index.html" 
    }
  ]
}